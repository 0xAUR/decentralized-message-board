{
  "name": "decentralized-message-board",
  "version": "1.0.0",
  "description": "A fully functional Web3 application that allows users to post and view messages on the blockchain",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test",
    "compile": "hardhat compile",
